{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vnetName": {
      "type": "string",
      "defaultValue": "ksVNet",
      "metadata": {
        "description": "VNet name"
      }
    },
    "vnetAddressPrefix": {
      "type": "string",
      "defaultValue": "10.0.0.0/16",
      "metadata": {
        "description": "Address prefix"
      }
    },
    "dnsPrefix": {
      "type": "string",
      "defaultValue": "ksarm",
      "metadata": {
        "description": "DNS Prefix"
      }
    },
    "subnet1Prefix": {
      "type": "string",
      "defaultValue": "10.0.0.0/24",
      "metadata": {
        "description": "Subnet 1 Prefix"
      }
    },
    "subnet1Name": {
      "type": "string",
      "defaultValue": "ksSubnet1",
      "metadata": {
        "description": "Subnet 1 Name"
      }
    },
    "publicIPName1": {
      "type": "string",
      "defaultValue": "ksPublicIPAddress1",
      "metadata": {
        "description": "Subnet 1 Public IP Name"
      }
    },
    "nic1Name": {
      "type": "string",
      "defaultValue": "ksNetworkInterface1",
      "metadata": {
        "description": "Subnet Network Interface 1 Name"
      }
    },
    "ipConfig1Name": {
      "type": "string",
      "defaultValue": "ksipconfig1",
      "metadata": {
        "description": "IP Configuration Subnet 1 Name"
      }
    },
    "subnet2Prefix": {
      "type": "string",
      "defaultValue": "10.0.1.0/24",
      "metadata": {
        "description": "Subnet 2 Prefix"
      }
    },
    "subnet2Name": {
      "type": "string",
      "defaultValue": "ksSubnet2",
      "metadata": {
        "description": "Subnet 2 Name"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    }
  },
  "variables": {
    "subnet1Path": "[concat(parameters('vnetName'),'/',parameters('subnet1Name'))]",
    "pubIP1Ref": "[resourceId('Microsoft.Network/publicIPAddresses/',parameters('publicIPName1'))]",
    "vNetRef": "[resourceId('Microsoft.Network/virtualNetworks/', parameters('vnetName'))]",
    "subnet1Ref": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('subnet1Name'))]"
  },
  "resources": [
    {
      "apiVersion": "2018-06-01",
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[parameters('vnetName')]",
      "location": "[parameters('location')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('vnetAddressPrefix')]"
          ]
        }
      }
    },
    {
      "apiVersion": "2016-03-30",
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[parameters('publicIPName1')]",
      "location": "[parameters('location')]",
      "properties": {
        "publicIPAllocationMethod": "Dynamic",
        "dnsSettings": {
          "domainNameLabel": "[parameters('dnsPrefix')]"
        }
      }
    },
    {
      "apiVersion": "2018-06-01",
      "type": "Microsoft.Network/virtualNetworks/subnets",
      "location": "[parameters('location')]",
      "name": "[variables('subnet1Path')]",
      "dependsOn": [
        "[parameters('vnetName')]"
      ],
      "properties": {
        "addressPrefix": "[parameters('subnet1Prefix')]"
      }
    },
    {
      "apiVersion": "2016-03-30",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[parameters('nic1Name')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[variables('pubIP1Ref')]",
        "[variables('subnet1Ref')]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "[parameters('ipConfig1Name')]",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "publicIPAddress": {
                "id": "[variables('pubIP1Ref')]"
              },
              "subnet": {
                "id": "[variables('subnet1Ref')]"
              }
            }
          }
        ]
      }
    }
  ]
}